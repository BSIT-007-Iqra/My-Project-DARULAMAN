@using DarulAman.Models;
@{
    Model1 db = new Model1();
    tbl_Admin c = (tbl_Admin)Session["Admin"];
    ViewBag.Title = "Profile";
}

<table class="table table-bordered table-responsive table-hover ">

    <thead style="background-color:thistle;color:white;font-size:22px">
        <tr>
            <th style="font-weight:bold">Frist Name</th>
            <th style="font-weight:bold">Last Name</th>
            <th style="font-weight:bold">Admin Email</th>
            <th style="font-weight:bold">Admin Address</th>
            <th style="font-weight:bold">Admin Contact</th>
            <th style="font-weight:bold">Order Status</th>

            <th style="font-weight:bold" colspan="2">Action</th>
        </tr>
    </thead>

    @foreach (var o in db.tbl_Admin.Where(x => x.STATUS == "Active"))
    {
        if (o.ACCESS_LEVEL_FID== c.tbl_AccessLevel.ACCESS_LEVEL_ID)

        {
            <tbody>
                <tr>
                    <td align="center" style="font-weight:bold;color:black">@o.FIRST_NAME</td>
                    <td align="center" style="font-weight: bold; color: black">@o.LAST_NAME</td>
                    <td align="center" style="font-weight: bold; color: black">@o.EMAIL</td>
                    <td align="center" style="font-weight: bold; color: black">@o.ADDRESS</td>
                    <td align="center" style="font-weight: bold; color: black">@o.CONTACT</td>
                    <td align="center" style="font-weight: bold; color: black">@o.STATUS</td>
                </tr>
            </tbody>
        }
    }
</table>